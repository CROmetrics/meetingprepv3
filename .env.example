# OpenAI Configuration
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
# Set to "1" to enable structured JSON output
STRUCTURED_OUTPUT=0
# Set to "1" to enable two-pass critique refinement
SELF_CRITIQUE=1

# Slack Configuration
# Can be user token (xoxp-...) or bot token (xoxb-...)
SLACK_TOKEN=xoxb-...

# HubSpot Configuration
HUBSPOT_TOKEN=pat-...

# Serper API (for web search)
SERPER_API_KEY=...

# Google Calendar API Configuration
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# People Data Labs API Configuration
PEOPLEDATALABS_API_KEY=your-pdl-api-key

# Server Configuration
PORT=3001
NODE_ENV=development

# Logging Configuration
LOGS_DIR=/tmp/meeting_brief_logs
LOG_LEVEL=info

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100